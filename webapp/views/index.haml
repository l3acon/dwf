!!! 5
%html
  %head
    %title Login Dw/F
    %link{href: "ionic.css", rel: "stylesheet", type: "text/css"}
    %meta{content: "width=device-width, user-scalable=no, minimal-ui", name: "viewport"}
  %body
    .bar.bar-header.bar-stable
      %h1.title Welcome!
    %div{class: "content.has-header.padding", style: "padding-right: 6px; padding-left: 6px;"}
      .row{align: "center", style: "padding-bottom: 2px; padding-top: 44px;"}
        .col
          %img{src: "logo.png"}
      %form{:action => '/login', :method => "post"} 
        .list.list-inset
          %label.item.item-input
            %input{placeholder: "Username", type: "text", name: "user"}
          %label.item.item-input
            %input{placeholder: "Password", type: "password", name: "pass"}
        %button.button.button-block.button-positive{type: "submit", :value=> "Submit"}
          Log In
      .row{align: "center"}
        .col.col-50
          %button.button.button-light Forgot Pass?
        .col.col-50
          %a{href: "/signup"}
            %button.button.button-light     Sign UP    
